// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client  {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  password      String?   // For email/password auth
  onboarded     Boolean   @default(false)
  bio           String?
  company       String?
  role          String?

  // Stripe subscription fields
  stripeCustomerId       String?
  stripeSubscriptionId   String?
  stripePriceId          String?
  stripeCurrentPeriodEnd DateTime?

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts               Account[]
  sessions               Session[]
  subscriptions          Subscription[]
  notificationPreferences NotificationPreferences?
  ideas                  Idea[]
  briefs                 Brief[]
  conversations          Conversation[]
  feedback               Feedback[]

  @@map("users")
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @map("user_id") @db.ObjectId
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String   // email address
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model Subscription {
  id                     String    @id @default(auto()) @map("_id") @db.ObjectId
  userId                 String    @db.ObjectId
  stripeSubscriptionId   String    @unique
  stripePriceId          String
  stripeProductId        String?
  status                 String    // active, canceled, incomplete, incomplete_expired, past_due, trialing, unpaid
  plan                   String    // free, pro, premium, enterprise
  currentPeriodStart     DateTime
  currentPeriodEnd       DateTime
  cancelAtPeriodEnd      Boolean   @default(false)
  canceledAt             DateTime?
  trialStart             DateTime?
  trialEnd               DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model NotificationPreferences {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @unique @db.ObjectId
  preferences Json     // Store all notification preferences as JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Idea {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @map("user_id") @db.ObjectId
  title     String
  status    String   // draft, analyzing, completed, archived
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  briefs        Brief[]
  conversations Conversation[]

  @@index([userId])
  @@index([status])
  @@map("ideas")
}

model Brief {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  ideaId             String   @map("idea_id") @db.ObjectId
  userId             String   @map("user_id") @db.ObjectId
  content            Json     // Store structured brief content as JSON (MongoDB equivalent of jsonb)
  generationTimeMs   Int?     @map("generation_time_ms") // Time taken to generate the brief in milliseconds
  status             String   @default("draft")
  summary            String?
  tokenUsage         Json?    @map("token_usage")
  errorLog           Json?    @map("error_log")
  isPublic           Boolean  @default(false) @map("is_public") // Whether the brief is publicly shareable
  shareToken         String?  @map("share_token") // Token for public sharing (optional)
  startedAt          DateTime @default(now()) @map("started_at")
  completedAt        DateTime? @map("completed_at")
  createdAt          DateTime @default(now()) @map("created_at")

  idea     Idea       @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  feedback Feedback[]

  @@index([ideaId])
  @@index([userId])
  @@index([createdAt])
  @@map("briefs")
}

model Feedback {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  briefId        String   @map("brief_id") @db.ObjectId
  userId         String   @map("user_id") @db.ObjectId
  rating         Int      // Overall rating (e.g., 1-5)
  sectionRatings Json?    @map("section_ratings") // Store ratings for individual sections as JSON (MongoDB equivalent of jsonb)
  comments       String?  // Optional user comments (text field)
  createdAt      DateTime @default(now()) @map("created_at")

  brief Brief @relation(fields: [briefId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([briefId])
  @@index([userId])
  @@index([createdAt])
  @@index([rating])
  @@map("feedback")
}

model Conversation {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  userId           String   @map("user_id") @db.ObjectId
  ideaId           String?  @map("idea_id") @db.ObjectId
  messages         Json     @default("[]")
  status           String   @default("elicitation")
  correctionCycles Int      @default(0) @map("correction_cycles")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  idea Idea? @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("conversations")
}

model KeywordCache {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  summaryHash  String   @unique @map("summary_hash")
  summary      String
  result       Json
  seeds        Json?
  costEstimate Float?   @map("cost_estimate")
  createdAt    DateTime @default(now()) @map("created_at")
  expiresAt    DateTime @map("expires_at")

  @@index([expiresAt])
  @@map("keyword_cache")
}
